@model ProjetoModeloDDD.Mvc.ViewModels.ProdutoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Excluir Produto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-danger"><i class="bi bi-trash"></i> Confirmar Exclusão</h2>

        <h4 class="text-danger">Tem certeza de que deseja excluir este produto?</h4>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-card-list"></i> Detalhes do Produto</h5>
                <dl class="row">
                    <dt class="col-sm-3">
                        <i class="bi bi-tag"></i> @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>

                    <dt class="col-sm-3">
                        <i class="bi bi-currency-dollar"></i> @Html.DisplayNameFor(model => model.Valor)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Valor)
                    </dd>

                    <dt class="col-sm-3">
                        <i class="bi bi-check-circle"></i> @Html.DisplayNameFor(model => model.Disponivel)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Disponivel)
                    </dd>

                    <dt class="col-sm-3">
                        <i class="bi bi-person"></i> Cliente
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Cliente.Nome)
                    </dd>
                </dl>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Excluir
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Voltar para a Lista
                </a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
