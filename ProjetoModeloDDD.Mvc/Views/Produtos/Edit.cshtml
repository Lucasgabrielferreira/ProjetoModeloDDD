@model ProjetoModeloDDD.Mvc.ViewModels.ProdutoViewModel

@{
    ViewBag.Title = "Editar Produto";
}

<h2 class="mb-4"><i class="bi bi-pencil-square"></i> Editar Produto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <h4><i class="bi bi-card-list"></i> Detalhes do Produto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProdutoId)

        <!-- Campo Nome -->
        <div class="mb-3 row">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10 input-group">
                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Campo Valor -->
        <div class="mb-3 row">
            @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10 input-group">
                <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Campo Disponível (Checkbox) -->
        <div class="mb-3 row">
            @Html.LabelFor(model => model.Disponivel, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-check">
                    @Html.EditorFor(model => model.Disponivel, new { htmlAttributes = new { @class = "form-check-input" } })
                    @Html.ValidationMessageFor(model => model.Disponivel, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <!-- Campo Cliente (Dropdown) -->
        <div class="mb-3 row">
            @Html.LabelFor(model => model.ClienteId, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10 input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                @Html.DropDownList("ClienteId", String.Empty)
                @Html.ValidationMessageFor(model => model.ClienteId, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Botão de Salvar -->
        <div class="mb-3 row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Salvar
                </button>
            </div>
        </div>
    </div>
}

<!-- Link para voltar à lista -->
<div class="mt-3">
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Voltar para a Lista
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
