@model IEnumerable<ProjetoModeloDDD.Mvc.ViewModels.ClienteViewModel>

@{
    ViewBag.Title = "Clientes Especiais";
}

<h2 class="mb-4">Clientes Especiais</h2>

<!-- Botão para criar um novo cliente -->
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Criar Novo Cliente
    </a>
</p>

<!-- Tabela de clientes especiais -->
<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Sobrenome)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Ativo)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Sobrenome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Ativo)</td>
                <td>
                    <!-- Botões de ação com ícones -->
                    <a href="@Url.Action("Edit", new { id = item.ClienteId })" class="btn btn-warning btn-sm" title="Editar">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Details", new { id = item.ClienteId })" class="btn btn-info btn-sm ms-2" title="Ver Detalhes">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.ClienteId })" class="btn btn-danger btn-sm ms-2" title="Excluir">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
