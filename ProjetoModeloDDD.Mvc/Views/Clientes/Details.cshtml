@model ProjetoModeloDDD.Mvc.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "Detalhes do Cliente";
}

<h2 class="mb-4"><i class="bi bi-person-circle"></i> Detalhes do Cliente</h2>

<!-- Informações do Cliente -->
<div class="card">
    <div class="card-body">
        <h4 class="card-title"><i class="bi bi-card-list"></i> Informações do Cliente</h4>
        <hr />
        <dl class="row">
            <!-- Nome -->
            <dt class="col-sm-3">
                <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <!-- Sobrenome -->
            <dt class="col-sm-3">
                <i class="bi bi-person-badge"></i> @Html.DisplayNameFor(model => model.Sobrenome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Sobrenome)
            </dd>

            <!-- Email -->
            <dt class="col-sm-3">
                <i class="bi bi-envelope"></i> @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <!-- Ativo -->
            <dt class="col-sm-3">
                <i class="bi bi-check-circle"></i> @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Ativo)
            </dd>
        </dl>
    </div>
</div>

<!-- Botões de Ação -->
<div class="mt-3">
    <a href="@Url.Action("Edit", new { id = Model.ClienteId })" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Editar
    </a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Voltar para a Lista
    </a>
</div>
