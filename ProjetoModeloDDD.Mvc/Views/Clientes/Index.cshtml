@model IEnumerable<ProjetoModeloDDD.Mvc.ViewModels.ClienteViewModel>

@{
    ViewBag.Title = "Lista de Clientes";
}

<h2 class="mb-4">Lista de Clientes</h2>

<!-- Botões de Ações -->
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary me-2">
        <i class="bi bi-plus-circle"></i> Criar Novo Cliente
    </a>
    <a href="@Url.Action("Especiais")" class="btn btn-success">
        <i class="bi bi-star-fill"></i> Clientes Especiais
    </a>
</p>

<!-- Tabela de Clientes -->
<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Sobrenome)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Ativo)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Sobrenome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Ativo)</td>
                <td>
                    <!-- Ações para Editar, Detalhes e Excluir -->
                    <a href="@Url.Action("Edit", new { id = item.ClienteId })" class="btn btn-warning btn-sm me-1" title="Editar">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a href="@Url.Action("Details", new { id = item.ClienteId })" class="btn btn-info btn-sm me-1" title="Ver Detalhes">
                        <i class="bi bi-info-circle"></i> Detalhes
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.ClienteId })" class="btn btn-danger btn-sm" title="Excluir">
                        <i class="bi bi-trash"></i> Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
